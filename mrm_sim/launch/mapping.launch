<launch>

	<arg name="scan_topic" default="/scan" />
	<arg name="only_mapping" default="false" />
	<arg name="map_size" default="2048" />
	<arg name="map_resolution" default="0.025" />
	<arg name="map_multi_res_levels" default="3" />

	<node pkg="mrm_mapping" type="mrm_mapping" name="mrm_mapping" output="screen">
    
    	<param name="only_mapping" value="$(arg only_mapping)" type="bool" />

    	<!-- Hector -->
		<param name="pub_map_odom_transform" value="false"/>
		<param name="map_frame" value="map" />
		<param name="base_frame" value="world" />
		<param name="odom_frame" value="odom" />

		<!-- Tf use -->
		<param name="use_tf_scan_transformation" value="true"/>
		<param name="use_tf_pose_start_estimate" value="false"/>
		<!-- <param name="pub_map_odom_transform" value="$(arg pub_map_odom_transform)"/> -->

		<!-- Map size / start point -->
		<param name="map_resolution" value="$(arg map_resolution)"/>
		<param name="map_size" value="$(arg map_size)"/>
		<param name="map_start_x" value="0.5"/>
		<param name="map_start_y" value="0.5" />
		<param name="map_multi_res_levels" value="$(arg map_multi_res_levels)" />

		<!-- Map update parameters -->
		<param name="update_factor_free" value="0.4"/>
		<param name="update_factor_occupied" value="0.9" />
		<!-- try 0.025 -->    
		<param name="map_update_distance_thresh" value="0.4"/>
		<param name="map_update_angle_thresh" value="0.06" />
		<param name="laser_z_min_value" value = "-1.0" />
		<param name="laser_z_max_value" value = "1.0" />
		<param name="map_pub_period" value="4.0" />

		<!-- Advertising config --> 
		<param name="advertise_map_service" value="true"/>
		<param name="scan_topic" value="$(arg scan_topic)"/>

	</node>

	<node name="tf_world_to_odom" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /world /odom 100" />
	<node name="tf_world_to_map" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 /world /map 100" />

</launch>